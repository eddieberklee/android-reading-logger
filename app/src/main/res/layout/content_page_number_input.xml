<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_page_number_input"
    tools:context="com.compscieddy.reading_logger.activities.PageNumberInputActivity">

    <TextView
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Book Title"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/page_number_input"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/book_title"
        android:hint="Page #..."/>

    <FrameLayout
        android:id="@+id/number_buttons_container"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        
        android:layout_below="@+id/page_number_input">
        <Button
            android:id="@+id/number_button_1"
            style="@style/NumButtonStyle"
            android:layout_marginLeft="0dp"
            android:text="1"/>
        <Button
            android:id="@+id/number_button_3"
            style="@style/NumButtonStyle"
            android:layout_marginLeft="50dp"
            android:text="3"/>
        <Button
            android:id="@+id/number_button_5"
            style="@style/NumButtonStyle"
            android:layout_marginLeft="100dp"
            android:text="5"/>
        <Button
            android:id="@+id/number_button_7"
            style="@style/NumButtonStyle"
            android:layout_marginLeft="150dp"
            android:text="7"/>
        <Button
            android:id="@+id/number_button_9"
            style="@style/NumButtonStyle"
            android:layout_marginLeft="200dp"
            android:text="9"/>
<!-- todo: think could this have been done better with linearlayout? -->
        <Button
            android:id="@+id/number_button_2"
            style="@style/NumButtonStyle"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="25dp"
            android:text="2"/>
        <Button
            android:id="@+id/number_button_4"
            style="@style/NumButtonStyle"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="75dp"
            android:text="4"/>
        <Button
            android:id="@+id/number_button_6"
            style="@style/NumButtonStyle"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="125dp"
            android:text="6"/>
        <Button
            android:id="@+id/number_button_8"
            style="@style/NumButtonStyle"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="175dp"
            android:text="8"/>
        <Button
            android:id="@+id/number_button_0"
            style="@style/NumButtonStyle"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="225dp"
            android:text="0"/>
    </FrameLayout>

</RelativeLayout>
